#Este programa suma los n primeros numeros enteros 
#donde n lo propone el usuario
def suma ():
  numero=int(input("¿Hasta que número quieres que sume ?"))
  suma=0
  for cont in range(1,numero+1):
   suma=suma+cont#acumulo en suma, lo que tenia más el nuevo valor de cont
  print("suma="+str(suma))


suma()
